<div class="ticket-container">
    <div class="ticket-card">
        <h1 class="ticket-title">TICKET</h1>
        <p class="ticket-purchaser">By: {{ticket.purchaser}}</p>
        {{#each ticket.products}}
        <div class="product-item-ticket">
            <p>{{product.title}}</p>
            <p>{{quantity}}</p>
            <p>${{product.price}}</p>
        </div>
        {{/each}}
        <p class="ticket-amount">Total: ${{ticket.amount}}</p>
        <p class="ticket-date">{{ticket.date}}</p>
        <p class="ticket-code">Ticket code: {{ticket.code}}</p>
    </div>
</div>